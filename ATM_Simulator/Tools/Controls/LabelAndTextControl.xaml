<UserControl x:Class="ATM_Simulator.Tools.Controls.LabelAndTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATM_Simulator.Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label Name="Label" Grid.Row="0" Height="25" FontWeight="Bold" FontSize="14" Margin="-2,-10,0,0"  
               Content="{Binding Caption, RelativeSource={RelativeSource FindAncestor, AncestorType=local:LabelAndTextControl}, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="TextBox" Grid.Row ="1" FontSize="14" FontWeight="Normal" Height="25"
                 Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=local:LabelAndTextControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
